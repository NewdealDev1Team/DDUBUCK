<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.mypage.mywalk.CoseClearFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/cose_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="님, 좋아요!"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:text="@string/cose_title_number"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:layout_marginLeft="24dp"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘도 코스를"
            android:textSize="14dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/cose_mini_title"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="회 완료했어요!"
            android:textSize="14dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/share_capture"
        android:layout_marginLeft="170dp"
        android:layout_width="15dp"
        android:layout_height="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/chart_share_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/cose_bar_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:background="@drawable/mypage_circle">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이번주 총"
            android:textSize="12dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/bottom_sheet_coseAllCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="12dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회 완주"
            android:textSize="12dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:layout_marginLeft="108dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마지막 업데이트 "
            android:textSize="12dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/cose_bottom_title_text_day"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/cose_bottom_title_text_time"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>