<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.mypage.mywalk.CoseClearFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="@string/cose_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="@string/cose_title_number"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:layout_marginLeft="24dp"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘도 코스를"
            android:textSize="14dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/cose_mini_title"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="회 완료했어요!"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/cose_bar_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <android.widget.Button
        android:id="@+id/sheet_complete_shareButton"
        android:text="이번주 총 5회 완주"
        android:layout_marginTop="10dp"
        android:textColor="@color/green"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:background="@drawable/mypage_circle"
        android:layout_width="160dp"
        android:layout_height="35dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:layout_marginLeft="108dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="마지막 업데이트 "
            android:textSize="12dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/cose_bottom_title_text_day"
            android:layout_marginTop="10dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/cose_bottom_title_text_time"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>