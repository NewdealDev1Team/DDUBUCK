<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/walktime"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@color/white"
    tools:context=".ui.mypage.mywalk.WalkTimeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/time_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="님, 잘하셨어요!"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/title_bottom_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/time_title_walk"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/title_layout"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/mini_title_layout3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/title_bottom_layout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:text="오늘의 산책시간은"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/time_mini_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="14dp"
                android:gravity="center"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="14dp"
                android:text="분 입니다."
                android:textSize="14dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/time_share_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/time_button_screenshot"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="350dp"
                android:background="@drawable/chart_share_icon"
                android:scaleType="centerCrop"
                android:textColor="@color/grey" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/time_bar_chart_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_gradient"
            app:layout_constraintTop_toBottomOf="@id/mini_title_layout3"
            tools:ignore="MissingConstraints">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/time_bar_chart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:background="@drawable/background_gradient"
                android:tooltipText="@android:string/ok" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/time_bar_chart_layout"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="108dp"
                android:gravity="center"
                android:text="마지막 업데이트 "
                android:textSize="12dp" />

            <TextView
                android:id="@+id/time_bottom_title_text_day"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time_bottom_title_text_time"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>