<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_badge_image"
        android:layout_width="89dp"
        android:layout_height="89dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_badge_challenge_goodjob"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_badge_text"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="첫 산책"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@+id/item_badge_image"
        app:layout_constraintStart_toStartOf="@+id/item_badge_image"
        tools:ignore="MissingConstraints"
         />

</androidx.constraintlayout.widget.ConstraintLayout>
