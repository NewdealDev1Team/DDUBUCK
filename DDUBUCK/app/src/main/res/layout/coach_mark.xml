<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coach_mark_master_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/coach_marks_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="bottom|center_horizontal"
        android:background="#00ffffff"
        android:src="@drawable/coach_mark_background" />

    <ImageView
        android:id="@+id/top1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right|top"
        android:background="#00ffffff"
        android:src="@drawable/coach_mark_item_top" />

    <ImageView
        android:id="@+id/top2"
        android:layout_width="132dp"
        android:layout_height="32dp"
        android:layout_gravity="left|top"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="114dp"
        android:src="@drawable/coach_mark_item_top" />

    <ImageView
        android:id="@+id/top3"
        android:layout_width="132dp"
        android:layout_height="18sp"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="209dp"
        android:src="@drawable/coach_mark_item_top" />


    <ImageView
        android:id="@+id/top4"
        android:layout_width="132dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="30dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="58dp"
        android:src="@drawable/coach_mark_item_top" />


    <ImageButton
        android:id="@+id/coach_mark_exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:background="#00000000"
        android:src="@drawable/ic_coach_mark_exitt"
        android:tint="@color/white" />
</FrameLayout>

