<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DDUBUCK" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--Window ActionBar Issue-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <!--  타이틀 바 전체 색      -->
        <item name="colorPrimary">@color/green</item>
        <!-- 상단바 제목   -->
        <item name="android:textColorPrimary">@color/black</item>
        <!--  기본 상태바 색     -->
<!--        <item name="android:textColor">@color/black</item>-->
        <!--  상태바   -->
        <item name="colorPrimaryVariant">@color/grey</item>
        <!--  타이틀바 이름 -->
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#3DAB5B</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

    <!--        <item name="android:windowIsTranslucent">true</item>-->
    <!--        <item name="android:windowContentOverlay">@null</item>-->
    <!--        <item name="android:windowNoTitle">true</item>-->
    <!--        <item name="android:backgroundDimEnabled">true</item>-->
    <!--        <item name="android:background">@android:color/transparent</item>-->

    <!-- 코치마크 테마 변경    WalkthroughTheme 화면 FullScreen 포함 -->
    <style name="WalkthroughTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>