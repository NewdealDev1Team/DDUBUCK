<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">

    <ripple android:color="#FFFFFF">
        <item android:id="@+id/edit_button_activated">
            <shape android:shape="rectangle">
                <corners android:radius="10dip" />

                <gradient
                    android:angle="180"
                    android:startColor="#3DAB5B"
                    android:endColor="#3DAB5B"
                    android:type="linear" />
                <stroke
                    android:width="1dp"
                    android:color="#1F753C" />
            </shape>
        </item>

        <item android:id="@+id/edit_button_deactivated">
            <shape android:shape="rectangle">
                <corners android:radius="10dip" />

                <gradient
                    android:angle="180"
                    android:startColor="#3DAB5B"
                    android:endColor="#3DAB5B"
                    android:type="linear" />
                <stroke
                    android:width="1dp"
                    android:color="#1F753C" />
            </shape>
        </item>
    </ripple>

</selector>
